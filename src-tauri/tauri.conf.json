{
  "build": {
    "devPath": "../src",      // src 폴더가 루트 기준으로 존재하면 이대로 가능
    "distDir": "../src"       // 빌드 산출물을 src 폴더 안으로 지정
  },
  "package": {
    "productName": "Retro Fox",
    "version": "1.0.0"
  },
  "tauri": {
    "windows": [
      {
        "title": "Retro Fox",
        "width": 1280,
        "height": 800
      }
    ],
    "bundle": {
      "active": true,
      "targets": ["msi"],
      "identifier": "com.retrofox.browser"
    },
    "security": {
      "csp": null
    }
  }
}
